<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<DialogPane fx:id="parentContainer" prefHeight="265.0" prefWidth="264.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.ems.energymanagementsystem.UserAccountController">
    <content>
        <VBox spacing="15.0">
            <children>
            <Label alignment="CENTER" text="*All fields are required!" textFill="#edb309">
               <font>
                  <Font name="Arial" size="13.0" />
               </font>
            </Label>
                <TextField fx:id="textFName" promptText="First Name" />
                <TextField fx:id="textLName" promptText="Last Name" />
                <TextField fx:id="textUsername" promptText="Username" />
                <PasswordField fx:id="textPassword" promptText="Password" />
                <PasswordField fx:id="textConfirmPassword" promptText="Confirm Password" />
            </children>
        </VBox>
    </content>
</DialogPane>
